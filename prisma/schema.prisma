generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mr {
  id        String   @id @default(uuid())
  name      String
  number    String
  mid       String   @unique
  Hq        String
  createdAt DateTime @default(now())
  Doctors   Doctor[]
}

model Doctor {
  id          String    @id @default(uuid())
  name        String
  number      String
  speciality  String
  imageUrl    String
  createdAt   DateTime  @default(now())
  mrId        String
  videoId     String?   @unique
  posterId    String?   @unique
  ipledgeId   String?   @unique
  
  MR          Mr        @relation(fields: [mrId], references: [id], onDelete: Cascade)
}

model Video {
  id     String  @id @default(uuid())
  url    String?
  refImageUrl  String
  refVideoUrl String
  docId  String?
}

model Poster {
  id     String  @id @default(uuid())
  url    String
  docId  String?
}

model IPledge {
  id     String  @id @default(uuid())
  url    String
  docId  String?
}
